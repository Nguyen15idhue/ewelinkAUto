<!DOCTYPE html>
<html lang="vi">
<% const pageTitle = 'queue'; %>
<%- include('partials/head') %>
<body>
    <%- include('partials/navbar') %>

    <div class="container py-4">
        <!-- Header Section -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">
                <i class="fas fa-tasks text-primary me-2"></i>Hàng đợi xử lý
                <span class="badge bg-secondary fs-6 align-middle ms-2"><%= queue ? queue.length : 0 %></span>
            </h4>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-danger btn-sm" onclick="clearCompleted()">
                    <i class="fas fa-broom me-1"></i> Dọn dẹp lệnh đã xong
                </button>
                <button class="btn btn-outline-warning btn-sm" onclick="cancelAllQueue()">
                    <i class="fas fa-ban me-1"></i> Hủy tất cả hàng đợi
                </button>
            </div>
        </div>

        <!-- Main Content -->
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <% if (!queue || queue.length === 0) { %>
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <i class="fas fa-clipboard-check fa-4x text-success opacity-25"></i>
                        </div>
                        <h5 class="text-muted">Hàng đợi trống</h5>
                        <p class="text-muted small mb-0">Hiện tại không có lệnh nào đang chờ xử lý.</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light text-secondary">
                                <tr class="text-uppercase small">
                                    <th width="5%" class="text-center">#</th>
                                    <th width="25%">Trạm / Thiết bị</th>
                                    <th width="10%" class="text-center">Lệnh</th>
                                    <th width="15%">Trạng thái</th>
                                    <th width="20%">Thời gian</th>
                                    <th width="10%" class="text-center">Nguồn</th>
                                    <th width="15%" class="text-center">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% queue.forEach((item, index) => { %>
                                <!-- Row Color Indicator -->
                                <tr class="status-<%= item.status %> bg-opacity-10">
                                    <td class="text-center fw-bold text-muted"><%= index + 1 %></td>
                                    
                                    <!-- Station Info -->
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold text-dark"><%= item.station_name %></span>
                                            <span class="small text-muted text-truncate" style="max-width: 200px;">
                                                <%= item.identification_name || 'Chưa có mô tả' %>
                                            </span>
                                            <span class="badge bg-light text-secondary border mt-1 w-auto align-self-start font-monospace">
                                                <i class="fas fa-microchip me-1"></i><%= item.device_id %>
                                            </span>
                                        </div>
                                    </td>

                                    <!-- Command -->
                                    <td class="text-center">
                                        <span class="badge rounded-pill bg-primary px-3 py-2"><%= item.command %></span>
                                    </td>

                                    <!-- Status -->
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <% if (item.status === 'PROCESSING') { %>
                                                <div class="spinner-border spinner-border-sm text-info me-2" role="status"></div>
                                                <span class="text-info fw-bold small">Đang chạy...</span>
                                            <% } else if (item.status === 'PENDING') { %>
                                                <i class="fas fa-clock text-warning me-2"></i>
                                                <span class="text-warning fw-bold small">Đang chờ</span>
                                            <% } else if (item.status === 'RETRY') { %>
                                                <i class="fas fa-redo text-warning me-2"></i>
                                                <span class="text-warning fw-bold small">Thử lại (<%= item.retry_count %>)</span>
                                            <% } else if (item.status === 'COMPLETED') { %>
                                                <i class="fas fa-check-circle text-success me-2"></i>
                                                <span class="text-success fw-bold small">Hoàn thành</span>
                                            <% } else if (item.status === 'FAILED') { %>
                                                <i class="fas fa-exclamation-circle text-danger me-2"></i>
                                                <span class="text-danger fw-bold small">Thất bại</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary"><%= item.status %></span>
                                            <% } %>
                                        </div>
                                    </td>

                                    <!-- Time & Logs -->
                                    <td class="small">
                                        <div class="text-muted"><i class="far fa-clock me-1"></i> <%= new Date(item.created_at).toLocaleString('vi-VN') %></div>
                                        <% if (item.status === 'FAILED' && item.error_log) { %>
                                            <div class="text-danger mt-1 fst-italic border-top pt-1">
                                                <i class="fas fa-bug me-1"></i> <%= item.error_log %>
                                            </div>
                                        <% } %>
                                    </td>

                                    <!-- Source -->
                                    <td class="text-center">
                                        <span class="badge bg-light text-dark border"><%= item.source %></span>
                                    </td>

                                    <!-- Action Buttons -->
                                    <td class="text-center">
                                        <% if (['COMPLETED', 'FAILED'].includes(item.status)) { %>
                                            <!-- Đã xong: Disable nút hủy -->
                                            <button class="btn btn-sm btn-light text-muted border" disabled title="Lệnh đã kết thúc">
                                                <i class="fas fa-ban"></i> Đã xong
                                            </button>
                                        <% } else if (item.status === 'PROCESSING') { %>
                                            <!-- Đang chạy: Disable nút hủy -->
                                            <button class="btn btn-sm btn-light text-info border" disabled title="Đang xử lý, không thể can thiệp">
                                                <i class="fas fa-cog fa-spin"></i> Xử lý...
                                            </button>
                                        <% } else { %>
                                            <!-- Đang chờ: Cho phép hủy -->
                                            <button class="btn btn-sm btn-outline-danger shadow-sm" onclick="deleteItem(<%= item.id %>)" title="Hủy lệnh này ngay lập tức">
                                                <i class="fas fa-times me-1"></i> Hủy lệnh
                                            </button>
                                        <% } %>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toast helper (Bootstrap)
                function showToast(message, variant = 'primary') {
                        const id = 'toast-' + Date.now();
                        let container = document.getElementById('toast-container-fixed');
                        if (!container) {
                                container = document.createElement('div');
                                container.id = 'toast-container-fixed';
                                container.style.position = 'fixed';
                                container.style.top = '72px';
                                container.style.right = '16px';
                                container.style.zIndex = '20000';
                                document.body.appendChild(container);
                        }
                        const wrapper = document.createElement('div');
                        wrapper.innerHTML = `
                        <div id="${id}" class="toast align-items-center text-bg-${variant} border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
                            <div class="d-flex">
                                <div class="toast-body">${message}</div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                            </div>
                        </div>`;
                        container.appendChild(wrapper);
                        const toastEl = document.getElementById(id);
                        const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                        toast.show();
                        toastEl.addEventListener('hidden.bs.toast', () => wrapper.remove());
                }

        // Xóa (Hủy) một lệnh cụ thể (AJAX + toast + partial refresh)
        async function deleteItem(id) {
            if(!await confirmAction('Bạn có chắc chắn muốn HỦY lệnh đang chờ này không?')) return;
            const btn = event.target.closest('button');
            const originalContent = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
            btn.disabled = true;

            try {
                const r = await fetch(`/queue/delete/${id}`, { method: 'POST', headers: { 'Content-Type': 'application/json' } });
                const d = await r.json();
                if (d.success) {
                    showToast('Đã hủy lệnh', 'success');
                    await refreshQueue();
                } else {
                    showToast('Lỗi: ' + d.message, 'danger');
                    btn.innerHTML = originalContent;
                    btn.disabled = false;
                }
            } catch (e) {
                showToast('Lỗi kết nối!', 'danger');
                btn.innerHTML = originalContent;
                btn.disabled = false;
            }
        }

        // Xóa toàn bộ lệnh đã xong (Completed/Failed)
        async function clearCompleted() {
            if(!await confirmAction('Bạn muốn xóa tất cả các lệnh ĐÃ HOÀN THÀNH hoặc THẤT BẠI khỏi danh sách?')) return;
            try {
                const r = await fetch(`/queue/clear-completed`, { method: 'POST', headers: { 'Content-Type': 'application/json' } });
                const d = await r.json();
                if (d.success) {
                    showToast('Đã dọn dẹp', 'success');
                    await refreshQueue();
                } else {
                    showToast('Lỗi: ' + d.message, 'danger');
                }
            } catch (e) {
                showToast('Lỗi kết nối: ' + e.message, 'danger');
            }
        }

        // Hủy tất cả hàng đợi (gọi route mới /cancel-all-queue)
        async function cancelAllQueue() {
            if(!await confirmAction('Bạn có chắc chắn muốn HỦY TẤT CẢ các lệnh đang chờ này không?')) return;
            try {
                const r = await fetch('/cancel-all-queue');
                const d = await r.json();
                if (d.success) {
                    showToast(d.message || 'Đã hủy tất cả', 'success');
                    await refreshQueue();
                } else {
                    showToast('Lỗi: ' + d.message, 'danger');
                }
            } catch (e) {
                showToast('Lỗi kết nối: ' + e.message, 'danger');
            }
        }

        // Tự động làm mới nội dung .container của trang queue (partial reload)
        async function refreshQueue() {
            try {
                const url = window.location.pathname + window.location.search + (window.location.search ? '&' : '?') + '_ts=' + Date.now();
                const resp = await fetch(url, { cache: 'no-store' });
                const html = await resp.text();
                const doc = new DOMParser().parseFromString(html, 'text/html');
                const newContainer = doc.querySelector('.container');
                const cur = document.querySelector('.container');
                if (!newContainer || !cur) return location.reload();
                if (cur.innerHTML.trim() === newContainer.innerHTML.trim()) {
                    return location.reload();
                }
                cur.replaceWith(newContainer);
            } catch (e) {
                console.error('Refresh failed', e);
            }
        }

        // Optional: scheduled refresh every 5s (keeps existing behaviour but using AJAX partial)
        setInterval(() => {
            refreshQueue();
        }, 5000);
                // Generic confirm modal helper (reused from dashboard)
                function ensureConfirmModal() {
                        if (document.getElementById('confirm-modal')) return;
                        const div = document.createElement('div');
                        div.innerHTML = `
                        <div class="modal fade" id="confirm-modal" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Xác nhận</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body"><p id="confirm-modal-msg"></p></div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                        <button type="button" class="btn btn-primary" id="confirm-modal-ok">Đồng ý</button>
                                    </div>
                                </div>
                            </div>
                        </div>`;
                        document.body.appendChild(div);
                }

                function confirmAction(message) {
                        return new Promise((resolve) => {
                                ensureConfirmModal();
                                const modalEl = document.getElementById('confirm-modal');
                                const msgEl = document.getElementById('confirm-modal-msg');
                                const okBtn = document.getElementById('confirm-modal-ok');
                                msgEl.textContent = message;
                                const bsModal = new bootstrap.Modal(modalEl, { backdrop: 'static' });
                                const onOk = () => {
                                        okBtn.removeEventListener('click', onOk);
                                        bsModal.hide();
                                        resolve(true);
                                };
                                modalEl.addEventListener('hidden.bs.modal', function handler() {
                                        modalEl.removeEventListener('hidden.bs.modal', handler);
                                        resolve(false);
                                });
                                okBtn.addEventListener('click', onOk);
                                bsModal.show();
                        });
                }
    </script>
</body>
</html>