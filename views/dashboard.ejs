<!DOCTYPE html>
<html lang="vi">
<% const pageTitle = 'dashboard'; %>
<%- include('partials/head') %>
<body>
    <%- include('partials/navbar') %>

    <div class="container-fluid py-4">
        <!-- Info Bar -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="alert alert-light border shadow-sm d-flex justify-content-between align-items-center mb-0">
                    <div>
                        <strong class="text-muted text-uppercase small">Trạng thái mục tiêu:</strong>
                        <span class="badge rounded-pill bg-<%= targetState == 'ON' ? 'success' : targetState == 'OFF' ? 'danger' : 'secondary' %> ms-2 fs-6">
                            <%= targetState %>
                        </span>
                    </div>
                    <div class="text-muted small">
                        <i class="fas fa-sync fa-spin me-1"></i> Cập nhật tự động (30s)
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="row g-3 mb-4">
            <div class="col-6 col-md-3">
                <div class="card stat-card h-100 border-start border-4 border-primary">
                    <div class="card-body">
                        <div class="text-muted small text-uppercase fw-bold">Tổng trạm</div>
                        <div class="h3 mb-0 text-primary"><%= stats.total %></div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card stat-card h-100 border-start border-4 border-success">
                    <div class="card-body">
                        <div class="text-muted small text-uppercase fw-bold">CGBAS Online</div>
                        <div class="h3 mb-0 text-success"><%= stats.cgbas_online %></div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card stat-card h-100 border-start border-4 border-info">
                    <div class="card-body">
                        <div class="text-muted small text-uppercase fw-bold">eWeLink Online</div>
                        <div class="h3 mb-0 text-info"><%= stats.ewelink_online %></div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card stat-card h-100 border-start border-4 border-warning">
                    <div class="card-body">
                        <div class="text-muted small text-uppercase fw-bold">Hàng chờ</div>
                        <div class="h3 mb-0 text-warning"><%= stats.pending %></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Table -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center py-3">
                <h5 class="mb-0 text-primary"><i class="fas fa-server me-2"></i>Danh sách trạm</h5>
                <div class="btn-group">
                    <button class="btn btn-outline-primary btn-sm" onclick="toggleGlobalAuto()">
                        <i class="fas fa-robot"></i> Auto Toàn cục
                    </button>
                    <button class="btn btn-outline-danger btn-sm" onclick="disableGlobalAuto()">
                        <i class="fas fa-power-off"></i> Tắt Auto Toàn cục
                    </button>
                    <button class="btn btn-outline-warning btn-sm" onclick="triggerAll()">
                        <i class="fas fa-bolt"></i> Kích hoạt tất cả
                    </button>
                </div>
            </div>
            
            <!-- Filter Bar -->
            <div class="card-body bg-light border-bottom p-3">
                <form action="/" method="GET" class="row g-2">
                    <div class="col-md-4">
                        <input type="text" name="search" class="form-control form-control-sm" placeholder="Tìm tên trạm..." value="<%= search %>">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary btn-sm w-100"><i class="fas fa-search"></i> Tìm kiếm</button>
                    </div>
                </form>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-secondary">
                        <tr class="text-uppercase small">
                            <th class="text-center" width="5%">Auto</th>
                            <th width="25%">Thông tin trạm</th>
                            <th class="text-center" width="10%">CGBAS</th>
                            <th width="20%">Thiết bị eWeLink</th>
                            <th width="15%">Trạng thái</th>
                            <th class="text-center" width="10%">Kênh</th>
                            <th class="text-center" width="15%">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% stations.forEach(st => { %>
                        <tr>
                            <td class="text-center">
                                <a href="/toggle-auto/<%= st.station_id %>" class="text-decoration-none">
                                    <i class="fas fa-toggle-<%= st.automation_status ? 'on text-success' : 'off text-secondary' %> fa-2x"></i>
                                </a>
                            </td>
                            <td>
                                <div class="fw-bold text-dark"><%= st.station_name %></div>
                                <div class="small text-muted"><%= st.identification_name %></div>
                            </td>
                            <td class="text-center">
                                <% if(st.connect_status == 1) { %>
                                    <span class="badge bg-success rounded-pill"><i class="fas fa-wifi"></i> ON</span>
                                <% } else { %>
                                    <span class="badge bg-secondary rounded-pill"><i class="fas fa-unlink"></i> OFF</span>
                                <% } %>
                            </td>
                            <td>
                                <select class="form-select form-select-sm border-0 bg-light" onchange="updateMapping(this, '<%= st.station_id %>')">
                                    <option value="">-- Chưa gán --</option>
                                    <% ewelinkList.forEach(dev => { %>
                                        <option value="<%= dev.device_id %>" <%= st.ewelink_id == dev.device_id ? 'selected' : '' %>>
                                            <%= dev.name %>
                                        </option>
                                    <% }) %>
                                </select>
                                <div id="msg-<%= st.station_id %>" class="small mt-1"></div>
                            </td>
                            <td>
                                <% if (st.ewelink_id) { %>
                                    <% if (st.hw_online === 1) { %>
                                        <div class="text-success small fw-bold"><i class="fas fa-check-circle"></i> Online</div>
                                        <div class="text-muted small" style="font-size: 0.75rem;">
                                            RSSI: <%= st.rssi %> | <%= st.voltage || 0 %>V
                                        </div>
                                    <% } else { %>
                                        <div class="text-danger small fw-bold"><i class="fas fa-times-circle"></i> Offline</div>
                                    <% } %>
                                <% } else { %>
                                    <span class="text-muted">-</span>
                                <% } %>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-<%= st.ch1_status == 'on' ? 'primary' : 'secondary' %> me-1">1</span>
                                <span class="badge bg-<%= st.ch2_status == 'on' ? 'primary' : 'secondary' %>">2</span>
                            </td>
                            <td class="text-center">
                                <% if (st.queue_status && ['PENDING','PROCESSING'].includes(st.queue_status)) { %>
                                    <span class="badge bg-warning text-dark blinking">
                                        <i class="fas fa-cog fa-spin"></i> <%= st.queue_cmd %>
                                    </span>
                                <% } else if (st.ewelink_id) { %>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/trigger/<%= st.ewelink_id %>/<%= st.station_name %>/ON" class="btn btn-outline-success" onclick="return confirm('Kích hoạt BẬT?')">BẬT</a>
                                        <a href="/trigger/<%= st.ewelink_id %>/<%= st.station_name %>/OFF" class="btn btn-outline-danger" onclick="return confirm('Kích hoạt TẮT?')">TẮT</a>
                                    </div>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            <% if (totalPages > 1) { %>
            <div class="card-footer py-3">
                <nav>
                    <ul class="pagination justify-content-center mb-0 pagination-sm">
                        <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
                            <a class="page-link" href="?page=<%= currentPage - 1 %>&pageSize=<%= pageSize %>&search=<%= search %>">Trước</a>
                        </li>
                        <li class="page-item disabled"><span class="page-link">Trang <%= currentPage %> / <%= totalPages %></span></li>
                        <li class="page-item <%= currentPage >= totalPages ? 'disabled' : '' %>">
                            <a class="page-link" href="?page=<%= currentPage + 1 %>&pageSize=<%= pageSize %>&search=<%= search %>">Sau</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto refresh page every 30s IF user is not typing in search
        let time = new Date().getTime();
        document.body.addEventListener("mousemove", () => { time = new Date().getTime(); });
        document.body.addEventListener("keypress", () => { time = new Date().getTime(); });

        setInterval(function() {
            if (new Date().getTime() - time >= 30000 && !document.getElementById('searchInput')?.value) {
                window.location.reload(true);
            }
        }, 30000);

        function updateMapping(el, stationId) {
            const msg = document.getElementById('msg-' + stationId);
            msg.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang lưu...';
            
            fetch('/api/update-mapping', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ station_id: stationId, ewelink_id: el.value })
            })
            .then(res => res.json())
            .then(data => {
                msg.className = data.success ? 'text-success small' : 'text-danger small';
                msg.innerHTML = data.success ? '<i class="fas fa-check"></i> Đã lưu' : 'Lỗi!';
                setTimeout(() => msg.innerHTML = '', 2000);
            });
        }
        // Toast helper (Bootstrap)
                function showToast(message, variant = 'primary') {
                        const id = 'toast-' + Date.now();
                        // Ensure there's a dedicated toast container below navbar
                        let container = document.getElementById('toast-container-fixed');
                        if (!container) {
                                container = document.createElement('div');
                                container.id = 'toast-container-fixed';
                                container.style.position = 'fixed';
                                container.style.top = '72px';
                                container.style.right = '16px';
                                container.style.zIndex = '20000';
                                document.body.appendChild(container);
                        }
                        const wrapper = document.createElement('div');
                        wrapper.innerHTML = `
                        <div id="${id}" class="toast align-items-center text-bg-${variant} border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
                            <div class="d-flex">
                                <div class="toast-body">${message}</div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                            </div>
                        </div>`;
                        container.appendChild(wrapper);
                        const toastEl = document.getElementById(id);
                        const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                        toast.show();
                        toastEl.addEventListener('hidden.bs.toast', () => wrapper.remove());
                }

        async function disableGlobalAuto() {
            if (!await confirmAction('Tắt chế độ Auto toàn cục?')) return;
            try {
                const res = await fetch('/disable-global-auto', { headers: { 'Accept': 'application/json' } });
                const json = await res.json();
                if (json && json.success) {
                    showToast(json.message || 'Đã tắt Auto toàn cục', 'success');
                    await refreshDashboard();
                } else {
                    showToast(json.message || 'Lỗi', 'danger');
                }
            } catch (e) {
                showToast('Lỗi kết nối: ' + e.message, 'danger');
            }
        }

        async function toggleGlobalAuto() {
            if (!await confirmAction('Đổi chế độ Auto toàn cục?')) return;
            try {
                const res = await fetch('/toggle-global-auto', { headers: { 'Accept': 'application/json' } });
                const json = await res.json();
                if (json && json.success) {
                    showToast(json.message || 'Đã đổi Auto toàn cục', 'success');
                    await refreshDashboard();
                } else {
                    showToast(json.message || 'Lỗi', 'danger');
                }
            } catch (e) {
                showToast('Lỗi kết nối: ' + e.message, 'danger');
            }
        }
        function triggerAll() { if(confirm('Kích hoạt tất cả?')) location.href='/trigger-all'; }

        // Reload the main container via AJAX to update statuses without full navigation
        async function refreshDashboard() {
            try {
                const url = window.location.pathname + window.location.search + (window.location.search ? '&' : '?') + '_ts=' + Date.now();
                const resp = await fetch(url, { cache: 'no-store' });
                const html = await resp.text();
                // parse and replace container-fluid
                const doc = new DOMParser().parseFromString(html, 'text/html');
                const newContainer = doc.querySelector('.container-fluid');
                const cur = document.querySelector('.container-fluid');
                if (!newContainer) return location.reload();
                if (!cur) return location.reload();
                // If content identical, do full reload to ensure consistency
                if (cur.innerHTML.trim() === newContainer.innerHTML.trim()) {
                    return location.reload();
                }
                cur.replaceWith(newContainer);
                // reset user activity timer so auto-refresh doesn't trigger immediately
                time = new Date().getTime();
            } catch (e) {
                console.error('Refresh failed', e);
            }
        }

                // Generic confirm modal using Bootstrap
                function ensureConfirmModal() {
                        if (document.getElementById('confirm-modal')) return;
                        const div = document.createElement('div');
                        div.innerHTML = `
                        <div class="modal fade" id="confirm-modal" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Xác nhận</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body"><p id="confirm-modal-msg"></p></div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                        <button type="button" class="btn btn-primary" id="confirm-modal-ok">Đồng ý</button>
                                    </div>
                                </div>
                            </div>
                        </div>`;
                        document.body.appendChild(div);
                }

                function confirmAction(message) {
                        return new Promise((resolve) => {
                                ensureConfirmModal();
                                const modalEl = document.getElementById('confirm-modal');
                                const msgEl = document.getElementById('confirm-modal-msg');
                                const okBtn = document.getElementById('confirm-modal-ok');
                                msgEl.textContent = message;
                                const bsModal = new bootstrap.Modal(modalEl, { backdrop: 'static' });
                                const onOk = () => {
                                        okBtn.removeEventListener('click', onOk);
                                        bsModal.hide();
                                        resolve(true);
                                };
                                modalEl.addEventListener('hidden.bs.modal', function handler() {
                                        modalEl.removeEventListener('hidden.bs.modal', handler);
                                        // if closed without clicking OK, resolve false
                                        resolve(false);
                                });
                                okBtn.addEventListener('click', onOk);
                                bsModal.show();
                        });
                }
    </script>
</body>
</html>